{
  "info": {
    "_postman_id": "1eb2b0be-b612-4c4f-95f4-c5a74d5de3dd",
    "name": "Mini Job Board API - Applications",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Applications",
      "item": [
        {
          "name": "Apply",
          "item": [
            {
              "name": "Apply to Job (Published) (saves application_id)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 201', () => pm.response.to.have.status(201));",
                      "const json = pm.response.json();",
                      "pm.environment.set('application_id', json.data.id);"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "POST",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"message\": \"Hello! I'd like to apply.\"\n}"
                },
                "url": "{{base_url}}{{api_prefix}}/jobs/{{published_job_id}}/apply"
              }
            },
            {
              "name": "Negative: Apply Again (duplicate) => 422",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 422', () => pm.response.to.have.status(422));",
                      "const json = pm.response.json();",
                      "pm.test('Has errors.job', () => pm.expect(json.errors && json.errors.job).to.be.ok);"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "POST",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"message\": \"Second application attempt.\"\n}"
                },
                "url": "{{base_url}}{{api_prefix}}/jobs/{{published_job_id}}/apply"
              }
            },
            {
              "name": "Negative: Apply to Draft Job (job_id) => 422",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 422', () => pm.response.to.have.status(422));",
                      "const json = pm.response.json();",
                      "pm.test('Has errors.job', () => pm.expect(json.errors && json.errors.job).to.be.ok);"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "POST",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"message\": \"Please consider me.\"\n}"
                },
                "url": "{{base_url}}{{api_prefix}}/jobs/{{job_id}}/apply"
              }
            }
          ]
        },
        {
          "name": "Lists",
          "item": [
            {
              "name": "List My Applied Jobs (applied-jobs)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 200', () => pm.response.to.have.status(200));",
                      "const json = pm.response.json();",
                      "pm.test('Has data array', () => pm.expect(json.data).to.be.an('array'));",
                      "pm.test('Has meta', () => pm.expect(json.meta).to.be.an('object'));"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/applied-jobs?per_page=10"
              }
            },
            {
              "name": "List My Applied Job IDs (applied-jobs/ids)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 200', () => pm.response.to.have.status(200));",
                      "const json = pm.response.json();",
                      "pm.test('Has data array', () => pm.expect(json.data).to.be.an('array'));"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/applied-jobs/ids"
              }
            }
          ]
        },
        {
          "name": "Employer Actions",
          "item": [
            {
              "name": "Employer: View Applicants for Published Job",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 200', () => pm.response.to.have.status(200));",
                      "const json = pm.response.json();",
                      "pm.test('Has data array', () => pm.expect(json.data).to.be.an('array'));"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_employer}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/employer/jobs/{{published_job_id}}/applications"
              }
            },
            {
              "name": "Employer: Update Application Status (application_id)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 200', () => pm.response.to.have.status(200));",
                      "const json = pm.response.json();",
                      "pm.test('Status reviewed', () => pm.expect(json.data.status).to.eql('reviewed'));"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_employer}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "PATCH",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"status\": \"reviewed\"\n}"
                },
                "url": "{{base_url}}{{api_prefix}}/employer/applications/{{application_id}}"
              }
            }
          ]
        },
        {
          "name": "Negative",
          "item": [
            {
              "name": "Negative: Applicant cannot view applicants => 403",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 403', () => pm.response.to.have.status(403));",
                      "const json = pm.response.json();",
                      "pm.test('Message Forbidden', () => pm.expect(json.message).to.eql('Forbidden'));"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/employer/jobs/{{published_job_id}}/applications"
              }
            }
          ]
        }
      ]
    }
  ]
