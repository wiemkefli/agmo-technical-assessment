{
  "info": {
    "_postman_id": "c2a9116c-c913-4f3d-bcfc-4e7b64e8a0c9",
    "name": "Mini Job Board API - Jobs (Applicant)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Jobs â€” Applicant",
      "item": [
        {
          "name": "Browse",
          "item": [
            {
              "name": "Browse Published Jobs (public)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 200', () => pm.response.to.have.status(200));",
                      "const json = pm.response.json();",
                      "pm.test('Has data array', () => pm.expect(json.data).to.be.an('array'));",
                      "pm.test('Has meta', () => pm.expect(json.meta).to.be.an('object'));"
                    ]
                  }
                }
              ],
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/jobs?per_page=10&sort=newest"
              }
            }
          ]
        },
        {
          "name": "Details",
          "item": [
            {
              "name": "View Job Details (Published) (published_job_id)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 200', () => pm.response.to.have.status(200));",
                      "const json = pm.response.json();",
                      "pm.test('Matches published_job_id', () => pm.expect(json.data.id).to.eql(parseInt(pm.environment.get('published_job_id'), 10)));"
                    ]
                  }
                }
              ],
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/jobs/{{published_job_id}}"
              }
            }
          ]
        },
        {
          "name": "Negative",
          "item": [
            {
              "name": "Negative: View Draft Job Details (job_id) => 404",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 404', () => pm.response.to.have.status(404));"
                    ]
                  }
                }
              ],
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  }
                ],
                "url": "{{base_url}}{{api_prefix}}/jobs/{{job_id}}"
              }
            },
            {
              "name": "Negative: Applicant cannot create employer job => 403",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "type": "text/javascript",
                    "exec": [
                      "pm.test('Status 403', () => pm.response.to.have.status(403));",
                      "const json = pm.response.json();",
                      "pm.test('Message Forbidden', () => pm.expect(json.message).to.eql('Forbidden'));"
                    ]
                  }
                }
              ],
              "request": {
                "auth": {
                  "type": "bearer",
                  "bearer": [
                    {
                      "key": "token",
                      "value": "{{token_applicant}}",
                      "type": "string"
                    }
                  ]
                },
                "method": "POST",
                "header": [
                  {
                    "key": "Accept",
                    "value": "application/json"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Should Fail\",\n  \"description\": \"Nope.\",\n  \"location\": \"KL\",\n  \"salary_range\": \"1000-2000\",\n  \"is_remote\": false,\n  \"status\": \"draft\"\n}"
                },
                "url": "{{base_url}}{{api_prefix}}/employer/jobs"
              }
            }
          ]
        }
      ]
    }
  ]
}
